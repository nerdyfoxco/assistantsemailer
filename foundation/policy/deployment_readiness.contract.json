{
    "contract_version": "v1.0",
    "deployment_name": "assistants_co_v0",
    "goal": "A real user successfully sends at least one real email using the system with final authority preserved.",
    "environment": "production",
    "must_be_true": {
        "user_can": [
            "sign_up",
            "connect_gmail_or_outlook",
            "see_one_email",
            "see_a_draft_reply",
            "approve_or_edit_draft",
            "send_email"
        ],
        "system_can": [
            "fetch_email_transiently",
            "generate_draft_with_llm",
            "present_draft_to_user",
            "send_email_via_provider_api",
            "log_action_with_source_attribution"
        ]
    },
    "explicitly_not_required": {
        "features": [
            "teams",
            "shared_inboxes",
            "advanced_policy_engine",
            "financial reconciliation",
            "HITL marketplace",
            "analytics dashboards",
            "billing automation",
            "enterprise compliance"
        ],
        "quality_bars": [
            "perfect categorization",
            "full inbox cleanup",
            "policy generalization",
            "zero manual review"
        ]
    },
    "security_floor": {
        "no_local_email_storage": true,
        "no_auto_send_without_user": true,
        "oauth_scopes_minimal": true,
        "audit_log_required": true
    },
    "failure_conditions": [
        "user_cannot_send_one_email",
        "email_sent_without_user_approval",
        "raw_email_persisted",
        "system_requires_configuration_before_first_use"
    ],
    "success_condition": "one real user completes one full email reply loop",
    "authority": {
        "final_decision": "USER",
        "execution": "AI",
        "override": "USER_ALWAYS_WINS"
    }
}